
username = input("Enter username: ")
security_level = input("Enter the security level, Low / Medium / High :").lower().strip()
lockout_threshold = int(input("Enter lockout threshold: "))

password_guess = input("Guess the correct password for your chosen security level :") # user guesses the password

attempts = 0
login_successful = False

if security_level == "low":
    password = "password"
    while password_guess != password:
        attempts += 1
        if attempts == lockout_threshold:
            break
        print("Incorrect password. Try again.")
        password_guess = input("Guess the correct password for your chosen security level :")
    else:
        attempts += 1
        print(f"You guessed the password. You took {attempts} attempts")
elif security_level == "medium":
    password = "PassW@rd123"
    while password_guess != password:
        attempts += 1
        if attempts == lockout_threshold:
            break
        print("Incorrect password. Tru again.")
        password_guess = input("Guess the correct password for your chosen security level :")
    else:
        attempts += 1
        print(f"You guessed the password. You took {attempts} attempts")